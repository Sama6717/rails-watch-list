<%= form_for [:list, @bookmark] do |f|%>

    <div class="form-group">

        <%= f.label :comment %>
        <br/>
        <%= f.text_field :comment %>
        

    </div>

    <div class="form-group">
    <%=  f.label :movie %><br/>
        <%= f.select :movie_id,
         Movie.all.collect{|movie| [movie.title,movie.id]},
          {:include_blank => "Select One"},
           class: "form-control"%><br />
    </div>
    <%= f.submit "Submit" ,class:"btn btn-primary"%>
    <%= link_to "Cancel" , lists_path, class:"btn btn-default"%>
   
<%end%>